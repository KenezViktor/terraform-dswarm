vrrp_script haproxy_container {
    script "/usr/bin/docker container ls --filter name=haproxy | /bin/grep haproxy"
    interval 5
    weight -20
    fall 2
    rise 2
}

vrrp_instance VI_1 {
    interface ens3
    {% if inventory_hostname in groups['manager-servers'][0] %}
    state MASTER
    {% else %}
    state BACKUP
    {% endif %}
    virtual_router_id 205
    priority 100
    virtual_ipaddress {
        {{ vrrp_ip }}
    }
    track_script {
        haproxy_container
    }
}
