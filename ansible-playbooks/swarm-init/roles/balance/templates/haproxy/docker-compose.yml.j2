version: '3.9'
services:
    haproxy:
        image: {{ haproxy_image }}
        ports:
            - published: 80
              target: 80
              protocol: tcp
              mode: ingress
            - published: 443
              target: 443
              protocol: tcp
              mode: ingress
        networks:
            - monitoring
        volumes:
            - /shared/stacks/haproxy/config/haproxy.cfg:/etc/haproxy/haproxy.cfg:ro
        dns:
            - 127.0.0.11
        deploy:
            mode: replicated
            replicas: 1
            placement:
                constraints:
                    - node.role == manager

networks:
    monitoring:
        name: cluster-monitoring_monitoring
        external: true
